@model JokesApp.Models.User
@{
    ViewData["Title"] = "Register";
    var jokes = ViewBag.Jokes as List<JokesApp.Models.Joke>;
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Username</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName" style="color:red;"></span>
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" style="color:red;"></span>
    </div>

    <div>
        <label>Security Question</label>
        <select asp-for="SecurityQestion">
            @foreach (var joke in jokes)
            {
                <option value="@joke.Question">@joke.Question</option>
            }
        </select>
        <span asp-validation-for="SecurityQestion" style="color:red;"></span>
    </div>

    <div>
        <label>Security Answer</label>
        <input asp-for="SecurityAnswer" />
        <span asp-validation-for="SecurityAnswer" style="color:red;"></span>
    </div>

    <button type="submit">Register</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}